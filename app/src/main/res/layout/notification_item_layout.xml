<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_min">

    <CheckBox
        android:id="@+id/cb_notification_visited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_max"
        android:paddingTop="@dimen/margin_max"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <TextView
        android:id="@+id/tv_notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mensagem de BloodApp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/cb_notification_visited"/>

    <TextView
        android:id="@+id/tv_notification_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Firebase messaging  is limited to fourty"
        android:textSize="16dp"
        android:layout_below="@id/tv_notification_title"
        android:layout_toLeftOf="@id/cb_notification_visited"/>

    <TextView
        android:id="@+id/tv_notification_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_med"
        android:layout_below="@+id/tv_notification_message"
        android:text="23/11/2018 15:53"
        android:textSize="12dp" />

</RelativeLayout>
