<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_min"
    card_view:cardCornerRadius="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageView
            android:id="@+id/iv_home_item_thumbnail"
            android:layout_width="400dp"
            android:layout_height="185dp"
            android:layout_centerInParent="true"
            android:src="@drawable/no_thumbnail"
            android:scaleType="centerCrop"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_home_item_thumbnail"
            android:layout_alignParentLeft="true"
            android:background="@drawable/home_gradient"
            android:orientation="vertical"
            android:paddingTop="15dp" >


            <TextView
                android:id="@+id/tv_home_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:shadowColor="#000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="6"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Styling Android" />

            <TextView
                android:id="@+id/tv_home_item_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="A guide to applying styles and themes to Android apps"
                android:textColor="#CCC"
                android:textSize="12sp" />
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>